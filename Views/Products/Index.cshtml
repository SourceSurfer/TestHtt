@model IEnumerable<TestHtt.Models.ProductsModel>

<p>
    <a asp-action="InputForm">Create New</a>
</p>


<div class="container d-flex flex-wrap">
    @foreach (var item in Model)
    {
        var s = item.ProductName;
        var firstWord = s.IndexOf(' ') > -1 ? s.Substring(0, s.IndexOf(' ')) : s;

        <div class="card" style="width: 18rem;">
            <img src="https://loremflickr.com/g/150/150/@firstWord?lock=@item.ProductId" class="card-img-top" alt="@item.ProductName">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@Html.DisplayFor(m => item.Price)</p>
                <p class="card-text">
                    @item.Description
                    <a href="/products/ShowDetails/@item.ProductId" class="btn btn-primary">Show details</a>
                    <a href="/products/Edit/@item.ProductId" class="btn btn-warning">Edit</a>
                    <a href="/products/Delete/@item.ProductId" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
